@model IEnumerable<PokemonHubXWatches.Models.HeldItemDTO>

<h1>Held Items</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>HP</th>
            <th>Attack</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HeldItemName</td>
                <td>@item.HeldItemHP</td>
                <td>@item.HeldItemAttack</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HeldItemId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.HeldItemId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Add New Item</a>
