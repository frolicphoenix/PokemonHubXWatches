@model IEnumerable<PokemonHubXWatches.ViewModels.HeldItemViewModel>

@{
    ViewData["Title"] = "Held Items";
}

<div class="container mt-4">
    <h1>Held Items</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Held Item</a>
    </p>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@item.HeldItemImage" class="card-img-top" alt="@item.HeldItemName">
                    <div class="card-body">
                        <h5 class="card-title">@item.HeldItemName</h5>
                        <p class="card-text">
                            <strong>Category:</strong> @item.Category<br />
                            <strong>Description:</strong> @item.Description
                        </p>
                        <div class="stats-grid">
                            <div class="stat-item">
                                <span>HP</span>
                                <span>+@item.HeldItemHP</span>
                            </div>
                            <div class="stat-item">
                                <span>Attack</span>
                                <span>+@item.HeldItemAttack</span>
                            </div>
                            <div class="stat-item">
                                <span>Defense</span>
                                <span>+@item.HeldItemDefense</span>
                            </div>
                            <div class="stat-item">
                                <span>Sp.Atk</span>
                                <span>+@item.HeldItemSpAttack</span>
                            </div>
                            <div class="stat-item">
                                <span>Sp.Def</span>
                                <span>+@item.HeldItemSpDefense</span>
                            </div>
                            <div class="stat-item">
                                <span>CDR</span>
                                <span>+@item.HeldItemCDR%</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.HeldItemId" class="btn btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.HeldItemId" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.HeldItemId" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
        margin-top: 15px;
    }

    .stat-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #f8f9fa;
        padding: 5px;
        border-radius: 5px;
    }

        .stat-item span:first-child {
            font-weight: bold;
            font-size: 0.9em;
        }

        .stat-item span:last-child {
            color: #28a745;
        }
</style>
