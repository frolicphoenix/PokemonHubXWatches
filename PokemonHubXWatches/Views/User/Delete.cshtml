@model PokemonHubXWatches.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <h1>Delete User</h1>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this User?</h4>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h2 class="card-title">@Model.UserName</h2>
            <dl class="row">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.Role</dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>

                <dt class="col-sm-3">Last Login</dt>
                <dd class="col-sm-9">@(Model.LastLogin?.ToString("g") ?? "Never")</dd>
            </dl>

            @if (Model.Reservations.Any())
            {
                <div class="alert alert-warning">
                    <strong>Warning:</strong> This user has @Model.Reservations.Count() active reservations.
                </div>
            }

            @if (Model.Builds.Any())
            {
                <div class="alert alert-warning">
                    <strong>Warning:</strong> This user has @Model.Builds.Count() pokemon builds.
                </div>
            }
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>