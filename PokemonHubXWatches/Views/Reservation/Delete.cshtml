@model PokemonHubXWatches.ViewModels.ReservationViewModel

@{
    ViewData["Title"] = "Delete Reservation";
}

<div class="container mt-4">
    <h1>Delete Reservation</h1>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this Reservation?</h4>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h2 class="card-title">Reservation #@Model.ReservationID</h2>
            <dl class="row">
                <dt class="col-sm-3">Watch</dt>
                <dd class="col-sm-9">@Model.WatchName</dd>

                <dt class="col-sm-3">User</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Reservation Date</dt>
                <dd class="col-sm-9">@Model.ReservationDate.ToString("g")</dd>

                <dt class="col-sm-3">End Date</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("g")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Status switch {
                        ReservationStatus.Pending => "bg-warning",
                        ReservationStatus.Confirmed => "bg-success",
                        ReservationStatus.Cancelled => "bg-danger",
                        _ => "bg-secondary"
                    })">
                        @Model.Status
                    </span>
                </dd>

                <dt class="col-sm-3">Total Price</dt>
                <dd class="col-sm-9">$@Model.TotalPrice.ToString("F2")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ReservationID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>