@model PokemonHubXWatches.ViewModels.PokemonViewModel

@{
    ViewData["Title"] = "Delete Pokemon";
}

<div class="container mt-4">
    <h1>Delete Pokemon</h1>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this Pokemon?</h4>
    </div>

    <div class="card mb-4">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.PokemonImage" class="img-fluid rounded-start" alt="@Model.PokemonName">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.PokemonName</h2>
                    <dl class="row">
                        <dt class="col-sm-4">Role</dt>
                        <dd class="col-sm-8">@Model.PokemonRole</dd>

                        <dt class="col-sm-4">Style</dt>
                        <dd class="col-sm-8">@Model.PokemonStyle</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">HP</dt>
                        <dd class="col-sm-8">@Model.PokemonHP</dd>

                        <dt class="col-sm-4">Attack</dt>
                        <dd class="col-sm-8">@Model.PokemonAttack</dd>

                        <dt class="col-sm-4">Defense</dt>
                        <dd class="col-sm-8">@Model.PokemonDefense</dd>

                        <dt class="col-sm-4">Special Attack</dt>
                        <dd class="col-sm-8">@Model.PokemonSpAttack</dd>

                        <dt class="col-sm-4">Special Defense</dt>
                        <dd class="col-sm-8">@Model.PokemonSpDefense</dd>

                        <dt class="col-sm-4">CDR</dt>
                        <dd class="col-sm-8">@Model.PokemonCDR%</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PokemonId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>