@model PokemonHubXWatches.Models.Pokemon

<h1>Delete Pokémon</h1>

<div>
    <h4>Are you sure you want to delete this Pokémon?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.PokemonName</dd>
            <dt class="col-sm-2">Role</dt>
            <dd class="col-sm-10">@Model.PokemonRole</dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="PokemonId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
