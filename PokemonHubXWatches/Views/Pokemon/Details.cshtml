@model PokemonHubXWatches.ViewModels.PokemonViewModel

@{
    ViewData["Title"] = "Pokemon Details";
}

<div class="container mt-4">
    <h1>Pokemon Details</h1>

    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.PokemonImage" class="img-fluid rounded-start" alt="@Model.PokemonName">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.PokemonName</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Role</dt>
                                <dd class="col-sm-8">@Model.PokemonRole</dd>

                                <dt class="col-sm-4">Style</dt>
                                <dd class="col-sm-8">@Model.PokemonStyle</dd>

                                <dt class="col-sm-4">Description</dt>
                                <dd class="col-sm-8">@Model.Description</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h4>Stats</h4>
                            <div class="stats-container">
                                <div class="stat-bar">
                                    <span>HP</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" style="width: @(Model.PokemonHP/10)%">
                                            @Model.PokemonHP
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-bar">
                                    <span>Attack</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-danger" style="width: @(Model.PokemonAttack/10)%">
                                            @Model.PokemonAttack
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-bar">
                                    <span>Defense</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" style="width: @(Model.PokemonDefense/10)%">
                                            @Model.PokemonDefense
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-bar">
                                    <span>Sp.Attack</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-warning" style="width: @(Model.PokemonSpAttack/10)%">
                                            @Model.PokemonSpAttack
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-bar">
                                    <span>Sp.Defense</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-info" style="width: @(Model.PokemonSpDefense/10)%">
                                            @Model.PokemonSpDefense
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-bar">
                                    <span>CDR</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-secondary" style="width: @Model.PokemonCDR%">
                                            @Model.PokemonCDR%
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.PokemonId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    .stats-container {
        margin-top: 20px;
    }

    .stat-bar {
        margin-bottom: 15px;
    }

        .stat-bar span {
            display: inline-block;
            width: 100px;
            font-weight: bold;
        }

    .progress {
        display: inline-block;
        width: calc(100% - 110px);
        height: 25px;
    }

    .progress-bar {
        line-height: 25px;
        color: white;
        text-shadow: 1px 1px 1px rgba(0,0,0,0.3);
    }
</style>