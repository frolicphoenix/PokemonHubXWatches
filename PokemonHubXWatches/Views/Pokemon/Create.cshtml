@model PokemonHubXWatches.Models.PokemonDTO

<h1>Add New Pokémon</h1>
<form asp-action="Create" method="post">
    <div>
        <label for="PokemonName">Name</label>
        <input type="text" asp-for="PokemonName" class="form-control" />
    </div>
    <div>
        <label for="PokemonRole">Role</label>
        <input type="text" asp-for="PokemonRole" class="form-control" />
    </div>
    <div>
        <label for="PokemonStyle">Style</label>
        <input type="text" asp-for="PokemonStyle" class="form-control" />
    </div>
    <div>
        <label for="PokemonHP">HP</label>
        <input type="number" asp-for="PokemonHP" class="form-control" />
    </div>
    <div>
        <label for="PokemonImage">Image URL</label>
        <input type="text" asp-for="PokemonImage" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
