@model PokemonHubXWatches.ViewModels.BuildViewModel

@{
    ViewData["Title"] = "Build Details";
}

<div class="container mt-4">
    <h1>Build Details</h1>

    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.Pokemon.PokemonImage" class="img-fluid rounded-start" alt="@Model.Pokemon.PokemonName">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.BuildName</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Pokemon</dt>
                                <dd class="col-sm-8">@Model.Pokemon.PokemonName</dd>

                                <dt class="col-sm-4">Created By</dt>
                                <dd class="col-sm-8">@Model.User.UserName</dd>

                                <dt class="col-sm-4">Created At</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h4>Updated Stats</h4>
                            <div class="stats-container">
                                <div class="stat-bar">
                                    <span>HP</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" style="width: @(Model.PokemonUpdatedHP/10)%">
                                            @Model.PokemonUpdatedHP
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-bar">
                                    <span>Attack</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-danger" style="width: @(Model.PokemonUpdatedAttack/10)%">
                                            @Model.PokemonUpdatedAttack
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-bar">
                                    <span>Defense</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-primary" style="width: @(Model.PokemonUpdatedDefense/10)%">
                                            @Model.PokemonUpdatedDefense
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-bar">
                                    <span>Sp.Attack</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-warning" style="width: @(Model.PokemonUpdatedSpAttack/10)%">
                                            @Model.PokemonUpdatedSpAttack
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-bar">
                                    <span>Sp.Defense</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-info" style="width: @(Model.PokemonUpdatedSpDefense/10)%">
                                            @Model.PokemonUpdatedSpDefense
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-bar">
                                    <span>CDR</span>
                                    <div class="progress">
                                        <div class="progress-bar bg-secondary" style="width: @Model.PokemonUpdatedCDR%">
                                            @Model.PokemonUpdatedCDR%
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.HeldItems.Any())
                    {
                        <div class="mt-4">
                            <h4>Held Items</h4>
                            <div class="row">
                                @foreach (var item in Model.HeldItems)
                                {
                                    <div class="col-md-4 mb-3">
                                        <div class="card">
                                            <img src="@item.HeldItem.HeldItemImage" class="card-img-top" alt="@item.HeldItem.HeldItemName">
                                            <div class="card-body">
                                                <h5 class="card-title">@item.HeldItem.HeldItemName</h5>
                                                <p class="card-text">Level: @item.ItemLevel</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.BuildId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    .stats-container {
        margin-top: 20px;
    }

    .stat-bar {
        margin-bottom: 15px;
    }

        .stat-bar span {
            display: inline-block;
            width: 100px;
            font-weight: bold;
        }

    .progress {
        display: inline-block;
        width: calc(100% - 110px);
        height: 25px;
    }

    .progress-bar {
        line-height: 25px;
        color: white;
        text-shadow: 1px 1px 1px rgba(0,0,0,0.3);
    }
</style>