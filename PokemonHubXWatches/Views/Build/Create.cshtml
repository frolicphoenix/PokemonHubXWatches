@model PokemonHubXWatches.ViewModels.BuildViewModel

@{
    ViewData["Title"] = "Create Build";
}

<div class="container mt-4">
    <h1>Create Build</h1>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="BuildName" class="control-label"></label>
                    <input asp-for="BuildName" class="form-control" />
                    <span asp-validation-for="BuildName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PokemonId" class="control-label">Pokemon</label>
                    <select asp-for="PokemonId" asp-items="ViewBag.Pokemons" class="form-control">
                        <option value="">Select Pokemon</option>
                    </select>
                    <span asp-validation-for="PokemonId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UserId" class="control-label">User</label>
                    <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control">
                        <option value="">Select User</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PokemonUpdatedHP" class="control-label"></label>
                            <input asp-for="PokemonUpdatedHP" class="form-control" type="number" />
                            <span asp-validation-for="PokemonUpdatedHP" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PokemonUpdatedAttack" class="control-label"></label>
                            <input asp-for="PokemonUpdatedAttack" class="form-control" type="number" />
                            <span asp-validation-for="PokemonUpdatedAttack" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PokemonUpdatedDefense" class="control-label"></label>
                            <input asp-for="PokemonUpdatedDefense" class="form-control" type="number" />
                            <span asp-validation-for="PokemonUpdatedDefense" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PokemonUpdatedSpAttack" class="control-label"></label>
                            <input asp-for="PokemonUpdatedSpAttack" class="form-control" type="number" />
                            <span asp-validation-for="PokemonUpdatedSpAttack" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PokemonUpdatedSpDefense" class="control-label"></label>
                            <input asp-for="PokemonUpdatedSpDefense" class="form-control" type="number" />
                            <span asp-validation-for="PokemonUpdatedSpDefense" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PokemonUpdatedCDR" class="control-label"></label>
                            <input asp-for="PokemonUpdatedCDR" class="form-control" type="number" />
                            <span asp-validation-for="PokemonUpdatedCDR" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}